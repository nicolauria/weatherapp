<header class="container-fluid text-center text-white bg-dark p-2">
  <h1>Weather Dashboard</h1>
</header>

<div class="container-fluid">
  <div class="row">
    <aside class="col-lg-4 bg-light mt-3">
      <div class="row">
        <div class="col">
          <input
            class="form-control"
            type="text"
            id="address"
            placeholder="Address"
            required
          />
        </div>
        <div class="col">
          <input
            class="form-control"
            type="text"
            id="city"
            placeholder="City"
            required
          />
        </div>
        <button class="btn btn-primary mb-3" id="search-button">
          Search
        </button>
      </div>

      <ul class="list-group history"></ul>
    </aside>

    <div class="col-lg-8">
      <div id="today" class="mt-3"></div>
      <div id="forecast" class="mt-3"></div>
    </div>
  </div>
</div>
